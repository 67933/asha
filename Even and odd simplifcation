import java.util.*;
public class Simple
{
public static void main(String args[])
{ 
int rem,odd1=0,even1=0,n;
Scanner sc=new Scanner (System.in);
System.out.println(enter a number);
n=sc.nextInt();
while(n>0)
{
rem=n%10;
if(rem%2==0)
{
even1=even1*10+rem;
}
else
{
odd1=odd1*10+rem;
}
n=n/10;
}
System.out.println(odd1);
System.out.println(even1);
}
}
----------------------
enter a number
245
5
42
