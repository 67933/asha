import java.util.*;
class main
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int n=sc.nextInt();
int m=sc.nextInt();
int arr[]=new int[n];
for(i=0;i<=n;i++)
{
arr[i]=0;
}
while(m>0)
{
int a=sc.nextInt();
int b=sc.nextInt();
for(i=a;i<=b;i++)
{
arr[i]+100;
}
}
Arrays.sort(arr);
System.out.print(+arr[n]);
}
}
